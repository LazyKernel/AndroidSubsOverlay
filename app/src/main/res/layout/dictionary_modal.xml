<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="200dp"
    android:layout_width="300dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/no_results_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_results"
            android:textSize="24sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_margin="7dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dictionary_modal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="7dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_close_dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_close_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Close dictionary modal" />
        <!-- contentDescription is intentionally not a string resource,
             used in a very janky way in NetflixParser
         -->
</androidx.constraintlayout.widget.ConstraintLayout>
